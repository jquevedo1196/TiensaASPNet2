@model Venta

@{
    ViewData["Title"] = "Proyecto de BD 'Tienda'";
}

<h2>Nueva Venta</h2>

<form method="POST">
    <div class="form-group">
        <label asp-for="UsuarioId" class="form-control">Cliente</label>
        @Html.DropDownList("UsuarioId",new SelectList(@ViewBag.Usuarios,"Text","Value"))
    </div>
    <div class="form-group">
        <label asp-for="FlAmout" class="form-control">Monto</label>
        <input type="number" step="0.01" asp-for="FlAmout">
    </div>
    <input type="submit"/>
</form>
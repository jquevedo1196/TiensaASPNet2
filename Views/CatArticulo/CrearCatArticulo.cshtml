@model CatArticulo

@{
    ViewData["Title"] = "Proyecto de BD 'Tienda'";
}

<h2>Nuevo artículo</h2>

<form method="POST">
    <div class="form-group">
            <label asp-for="ArtNombre" class="form-control">Nombre del artículo</label>
            <input type="text" asp-for="ArtNombre">
        </div>
    <div class="form-group">
        <label asp-for="MarcaId" class="form-control">Seleccione una Marca</label>
        @Html.DropDownList("MarcaId",new SelectList(@ViewBag.Marcas,"Text","Value"))
    </div>
    <input type="submit"/>
</form>
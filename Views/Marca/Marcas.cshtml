@model List<Marca>
@{
    ViewData["Title"] = "Silo Manager";
}

<div style="width: 100%; padding-bottom: 20px">
    <div>
        <div>
            <h2>Marcas</h2>
        </div>
        <div>
            <a href="~/../Marca/CrearMarca/">Crear nueva Marca</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre de la Marca</th>
            <th scope="col">Estatus</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var marca in @Model)
        {
            <tr>
                <th scope="row">@marca.MarcaId</th>
                <td>@marca.VcMarcaName</td>
                <td>@marca.VcMarcaStatus</td>
                <td><a href="~/../Marca/EditarMarca/@marca.MarcaId">Editar</a></td>
                <td><a href="~/../Marca/BorrarMarca/@marca.MarcaId">Eliminar</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>

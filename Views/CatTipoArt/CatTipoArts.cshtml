@model List<CatTipoArt>
@{
    ViewData["Title"] = "Silo Manager";
}

<div style="width: 100%; padding-bottom: 20px">
    <div>
        <div>
            <h2>Tipos de Artículos</h2>
        </div>
        <div>
            <a href="~/../CatTipoArt/CrearTipoArt/">Crear nuevo tipo de artículo</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tipo de Artículo</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var tipoArt in @Model)
        {
            <tr>
                <th scope="row">@tipoArt.TipoArtId</th>
                <td>@tipoArt.TipoArtDesc</td>
                <td><a href="~/../CatTipoArt/EditarTipoArt/@tipoArt.TipoArtId">Editar</a></td>
                <td><a href="~/../CatTipoArt/EliminarTipoArt/@tipoArt.TipoArtId">Eliminar</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>

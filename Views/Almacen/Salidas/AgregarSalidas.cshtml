@model Salida
@{
    ViewData["Title"] = "Silo Manager";
}
<h2>Agregar Herramienta/Dispositivo para salir del almacén</h2>

<form method="POST">
    <div class="form-group">
        <input type="hidden" asp-for="ProyectoId" value="@ViewBag.ProyectoId">
    </div>
    <div class="form-group">
        <label asp-for="ArtModelo" class="form-control">Seleccione un artículo del stock</label>
        @Html.DropDownList("ArtModelo", new SelectList(@ViewBag.Articulos, "Text", "Value"))
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="form-control">Cantidad prestada</label>
        <input type="number" asp-for="Cantidad" min="1" max="100">
    </div>
    <div class="form-group">
        <label asp-for="Fecha" class="form-control">Fecha</label>
        <input type="datetime-local" asp-for="Fecha">
    </div>
    <input type="submit"/>
</form>